{
  "manifest_version": 3,
  "name": "YouTube Music Auto-Pauser",
  "version": "1.0.0",
  "description": "Automatically pauses YouTube Music when a YouTube video starts playing in another tab.",

  "permissions": [
    "tabs",
    "storage"
  ],

  "host_permissions": [
    "*://*.youtube.com/*",
    "*://music.youtube.com/*"
  ],

  "background": {
    "service_worker": "src/background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "exclude_matches": ["*://music.youtube.com/*"],
      "js": ["src/content-youtube.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://music.youtube.com/*"],
      "js": ["src/content-music.js"],
      "run_at": "document_idle"
    }
  ]
}